mixin profileForm(profile = {})
    form(action=`/profile/add/${profile._id || ''}` method="POST" class="card" enctype="multipart/form-data")
        label(for="name") Name
        input(type="text" name="name" value=profile.name)
        label(for="gender") Gender
        - const genderChoices = ['Male', 'Female']
        ul.tags
            each choice in genderChoices
                .tag.tag__choice
                    if choice === profile.gender
                        input(type="radio" id=choice value=choice name="gender" checked="checked")
                    else
                        input(type="radio" id=choice value=choice name="gender")
                    label(for=choice) #{choice}
        label(for="age") Age
        input(type="number" name="age" value=profile.age)
        //- image upload
        label(for="photo") Photo
            input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
            if profile.photo
                img(src=`/uploads/${profile.photo}`, alt=profile.name width=200)
        label(for="about") About
        textarea(name="about")=profile.about
        label(for="weight") Weight (kgs)
        input(type="number" name="weight" value=profile.weight)
        label(for="height") Height (cms)
        input(type="number" name="height" value=profile.height)
        label(for="waist") Waist (cms)
        input(type="number" name="waist" value=profile.waist)
        label(for="fat_percent") Body Fat (%)
        input(type="number" name="fat_percent" value=profile.fat_percent)
        input(type="submit" value="Save â†’" class="button")